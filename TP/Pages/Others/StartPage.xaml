<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             x:Class="TP.Pages.Others.StartPage"
             FlowDirection="RightToLeft">

    <FlexLayout Direction="Column" JustifyContent="SpaceAround" AlignItems="Center" HeightRequest="150" >
        <Label Text="اهلا بك في برنامج الكلية" FontSize="Title" VerticalOptions="Center" HorizontalOptions="Center"/>
        <buttons:SfButton Text="تسجيل دخول" WidthRequest="100" HeightRequest="40" x:Name="OpenLoginPageBtn" Clicked="OpenLoginPageBtnClicked"/>
        <buttons:SfButton Text="تسجيل حساب جديد" WidthRequest="130" HeightRequest="40" x:Name="OpenSignupPageBtn" Clicked="OpenSignupPageBtnClicked"/>
    </FlexLayout>

</ContentPage>