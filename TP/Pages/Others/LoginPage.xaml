<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:entry="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             x:Class="TP.Pages.Others.LoginPage"
             >
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="تسجيل دخول" FontSize="Title" VerticalOptions="Center" HorizontalOptions="Center"/>
        <entry:SfTextInputLayout Hint="اسم المستخدم" ContainerType="Outlined" WidthRequest="300"
                   HelperText="ادخل اسم المستخدم" x:Name="UsernameTxtInL">
            <Entry x:Name="UsernameEntry" BackgroundColor="#dcdcdc"/>
        </entry:SfTextInputLayout>

        <entry:SfTextInputLayout Hint="كلمة السر" ContainerType="Outlined" WidthRequest="300"
                   HelperText="ادخل كلمة السر" EnablePasswordVisibilityToggle="True" x:Name="PasswordTxtInL" >
            <Entry x:Name="PasswordEntry"/>
        </entry:SfTextInputLayout>
        <Button Text="دخول" WidthRequest="120" HeightRequest="40" x:Name="LoginBtn" Clicked="LoginBtnClicked"/>


    </VerticalStackLayout>
</ContentPage>